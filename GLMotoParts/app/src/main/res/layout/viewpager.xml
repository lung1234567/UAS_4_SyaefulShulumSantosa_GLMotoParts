<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Elemen UI untuk item pertama -->
    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView_name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="developer"
        android:textSize="16sp" />

    <!-- Elemen UI untuk item kedua -->
    <TextView
        android:id="@+id/textView_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView_mobile_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91-8129999999"
        android:textSize="16sp" />

    <!-- Elemen UI untuk item ketiga -->
    <TextView
        android:id="@+id/textView_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView_email_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="developer@appsnipp.com"
        android:textSize="16sp" />

    <!-- Elemen UI untuk item keempat -->
    <TextView
        android:id="@+id/textView_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView_address_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avenue 2nd Street NW SY."
        android:textSize="16sp" />

    <!-- Elemen UI untuk item kelima -->
    <TextView
        android:id="@+id/textView_dob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D.O.B:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView_dob_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12-05-1990"
        android:textSize="16sp" />

</LinearLayout>